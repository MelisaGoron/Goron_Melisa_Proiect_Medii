@page "/{id:int?}"

@model Goron_Melisa_Proiect_Medii.Pages.Teme.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tema[0].Titlu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tema[0].Elev)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tema[0].DataPublicarii)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tema[0].Clasa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tema[0].TemaDiscipline)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.TemaD.Teme)
        {

            string selectedRow = "";
            if (item.ID == Model.TemaID)
            {
                selectedRow = "table-success";
            }

        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Titlu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Elev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataPublicarii)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clasa.NumeClasa)
            </td>

            <td>
                @{
                    foreach (var disciplina in item.TemaDiscipline)
                    {
                        @disciplina.Disciplina.ID @: @disciplina.Disciplina.NumeDisciplina <br />
                    }
                }
            </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
