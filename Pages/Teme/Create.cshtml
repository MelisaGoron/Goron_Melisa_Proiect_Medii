@page
@model Goron_Melisa_Proiect_Medii.Pages.Teme.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Tema</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> @* afiseaza un rezumat al erorilor de validare*@
            <div class="form-group">
                <label asp-for="Tema.Titlu" class="control-label"></label>
                <input asp-for="Tema.Titlu" class="form-control" />
                <span asp-validation-for="Tema.Titlu" class="text-danger"></span> @*afiseaza un mesaj de validare pentru proprietatea aferenta din modelul nostru*@
            </div>
            <div class="form-group">
                <label asp-for="Tema.Elev" class="control-label"></label>
                <input asp-for="Tema.Elev" class="form-control" />
                <span asp-validation-for="Tema.Elev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tema.DataPublicarii" class="control-label"></label>
                <input asp-for="Tema.DataPublicarii" class="form-control" />
                <span asp-validation-for="Tema.DataPublicarii" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tema.ClasaID" class="control-label">Nume clasa</label>
                <select asp-for="Tema.ClasaID" class="form-control" asp-items="ViewBag.ClasaID">
                </select>
                <span asp-validation-for="Tema.ClasaID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var dis in Model.ListaDisciplineAtribuite)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="disciplineSelectate"
                                               value="@dis.DisciplinaID"
                                               @(Html.Raw(dis.Assigned ? "checked=\"checked\"" : "")) />
                                        @dis.DisciplinaID @: @dis.Nume
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
